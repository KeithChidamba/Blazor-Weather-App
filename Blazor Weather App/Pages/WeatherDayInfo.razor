  @if(DataLoaded)
  {
      <p>Description: @description</p>
      <ul>
          <li>Temp: @CurrentTemperature @TemperatureSymbol
              <div class="dropdown">
                  <div class="dropdown-content">
                      <button @onclick="ShowFahrenheit">Fahrenheit</button>
                      <button @onclick="ShowCelsius">Celsius</button>
                  </div>
              </div>
          </li>
          <li>Humidity: @humidity</li>
          <li>Wind speed: @CurrentWindSpeed @SpeedSymbol
              <div class="dropdown">
                  <div class="dropdown-content">
                      <button @onclick="Show_kmh">Km/h</button>
                      <button @onclick="Show_mph">mph</button>
                  </div>
              </div>
          </li>
      </ul>
  }
@code {
    [Parameter] public WeatherForecastModel.WeatherForecast? WeatherInfoForDay { get; set; }
    public string? TemperatureSymbol = "\u00b0C";
    public string? SpeedSymbol = "Km/h";
    public string description;
    public float CurrentTemperature;
    public float CurrentWindSpeed;
    public double humidity;
    public bool DataLoaded = false;
    public void LoadInfo(string _description, float _CurrentTemperature, float _CurrentWindSpeed, double _humidity)
    {
        Console.WriteLine("here");
         description = _description;
         CurrentTemperature = _CurrentTemperature;
         CurrentWindSpeed = _CurrentWindSpeed;
         humidity = _humidity;
         Show_kmh();
         ShowCelsius();
         DataLoaded = true;
    }
    public void Show_kmh()
    {
        CurrentWindSpeed = WeatherInfoForDay.Wind.Speed;
        SpeedSymbol = "Km/h";
    }
    public void Show_mph()
    {
        CurrentWindSpeed = (float)Math.Round(WeatherInfoForDay.Wind.Speed * 0.621371f,4);
        SpeedSymbol = "m/h";
    }
    public void ShowFahrenheit()
    {
        CurrentTemperature = (float)Math.Round(WeatherInfoForDay.Main.Temp * (9f / 5) , 2) + 32;
        TemperatureSymbol = "\u00b0F";
    }
    public void ShowCelsius()
    {
        CurrentTemperature = WeatherInfoForDay.Main.Temp;
        TemperatureSymbol = "\u00b0C";
    }
}